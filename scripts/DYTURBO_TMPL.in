# DYTURBO Template
sroot        = SETSROOT       # center-of-mass energy
ih1          = SETIH1         # hadron 1
ih2          = SETIH2         # hadron 2
nproc        = SETNPROC       # process: 1) W+; 2)W-; 3)Z(/gamma*)
g_param      = SETGPAR        # non perturbative g parameter
order        = SETORDER       # order: 1) NLO(+NLL), 2) NNLO(+NNLL)
fixedorder   = false          # resummation or fixed order switch

#PDF settings
LHAPDFset    = SETPDFSET      # PDF set from LHAPDF
LHAPDFmember = SETMEMBER      # PDF member
PDFerrors    = SETPDFERRORS   # calculate PDF errors

#QCD scale settings
dynamicscale    = false       # if true, the renormalisation and factorisation scales are proportional to m_ll, if false they are proportional to m_V (V=W,Z)
dynamicresscale = true        # if true, the resummation scale is proportional to m_ll, if false it is proportional to m_V (V=W,Z)
kmuren          = 1.          # scale factor for the renormalisation scale
kmufac          = 1.          # scale factor for the factorisation scale
kmures          = 0.5         # scale factor for the resummation scale

# EW parameters (Gmu scheme)
Gf = 1.1663787e-5        # G-Fermi
zmass = 91.1876          # Mass of the Z boson
wmass = 80.385           # Mass of the W boson
zwidth = 2.4950          # Width of the Z boson
wwidth = 2.091           # Width of the W boson
zerowidth = false        # zero-width approximation (not really implemented)

# To use an effective weak-mixing angle, set xw to a non-zero value, otherwise it is calculated according to the Gmu scheme
xw = 0.   # effective weak-mixing angle

# To use an effective value of alpha_EM(MZ), set aemmz to a non-zero value, otherwise it is calculated according to the Gmu scheme
aemmz = 0.  #effective value of alpha_EM(MZ)

# CKM matrix
Vud = 0.97427
Vus = 0.2253
Vub = 0.00351
Vcd = 0.2252
Vcs = 0.97344
Vcb = 0.0412

# Z/gamma* coupling to quarks
Zuu = 1.0
Zdd = 1.0
Zss = 1.0
Zcc = 1.0
Zbb = 1.0

# include virtual photon in Z/gamma* production
useGamma = true

# Set boundaries of integration
ylow  = -5
yhigh = 5
mlow  = SETMLO
mhigh = SETMHI

# Resummation parameters
resumcpp  = true  # use C++ code for resummation
qtcutoff = 0.02   # resummation cutoff
blim = -1         # scale factor for blim

# Strategy for the direct Mellin transform of PDFs at the factorization scale
# Set to 1 to use the dyres approximation of PDFs and integration contour in the complex plane for the Mellin inversion
# Set to 0 to use exact PDFs and straight line contour in the complex plane for the Mellin inversion
opts_approxpdf = 0
# number of intervals for integration of PDF moments (direct Mellin transform), relevant only for opts_approxpdf = 0
opts_pdfintervals = 100

# Type of PDF evolution (0: DYRES, 1: Pegasus as DYRES, 2: Mellin transform, 3: Pegasus VFN)
evolmode = SETEVOLMODE

#Settings for the Bessel integration
bintaccuracy = 1.0e-4  #accuracy

#Settings for the inverse Mellin integrations
mellinintervals = 1 #number of intervals
mellinrule = 64     #number of nodes
zmax = 27.   	    #upper limit of the contour in the imaginary axis

#number of intervals and gaussian rule for the rapidity integrations
yintervals = 1
yrule = 20

# resummation damping
dampk = 0.5
dampdelta = 0.5
dampmode = 1


# qtcut
xqtcut = 0.008
qtcut = 0.

# integration settings
rseed        = SETSEED         # random seed for MC integration

# type of integration for the resummed cross section
intDimRes = SETRESUMDIM # can be 2, 3, or 4

# type of integration for counter term
intDimCT = SETCTDIM # can be 2, 3, 6, or 8

# term switches
doRES  = SETDORES
doVV   = SETDOVV
doCT   = SETDOCTM
doREAL = SETDOREA
doVIRT = SETDOVIR
doLO   = SETDOLOR
doVJ   = SETDOVJ

# Cuba settings
cubaverbosity    = 0   # Cuba info messsages, from 0 to 3
cubacores        = SETCUBACORES   # parallelization ( 0 = turn off)
niterRES         = 0 # 18   # only for 2d and 3d cuhre integration of resummed part
niterCT          = 0 # 10   # only for 2d and 3d cuhre integration of counter term
niterVJ          = 0 # 10   # only for 3d cuhre integration of V+J
vegasncallsRES   = 1e6      # only for res 4d vegas integration
vegasncallsVV    = 1e8      # only for double virtual 6d vegas integration
vegasncallsCT    = 3e8      # only for 6d and 8d vegas integration of the connter term
vegasncallsLO    = 3e8      # only for lo 7d vegas integration
vegasncallsREAL  = 1e8      # only for real 10d vegas integration
vegasncallsVIRT  = 1e8      # only for virt 8d vegas integration

# total or with lepton cuts
makelepcuts = SETLEPCUTS
lptcut = 20
lycut = 2.5
l1ptcut = 0
l1ycut = 1000
l2ptcut = 0
l2ycut = 1000
fiducial = SETDETFIDUCIAL

# integration types and settings for costh phi_lep phase space
cubaint   = false   # integration with Cuba Suave
trapezint = false  # trapezoidal rule for the phi_lep integration and semi-analytical for costh
quadint   = true  # quadrature rule for the phi_lep integration and semi-analytical for costh
pcubature = SETPCUBATURE
pcubaccuracy = 1e-3

suavepoints = 1000000 # number of points for suave integration, newpoints is set to suavepoints/10;
nphitrape   = 1000    # number of steps for trapezoidal rule of phi_lep integration
quadnphi    = 20      # number of segments for quadrature rule of phi_lep integration
ncstart     = 100     # starting sampling for the costh semi-analytical integration (common settings for the trapezoidal and quadrature rules)

# qt-recoil prescriptions
qtrec_naive = SETQTRECNAIVE
qtrec_cs    = SETQTRECCS
qtrec_kt0   = SETQTRECKT0

# debug settings
timeprofile = false  # debug and time profile resummation integration
verbose     = false  # debug and time profile costh phi_lep integration


